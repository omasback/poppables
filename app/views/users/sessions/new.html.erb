<h1><%= flash[:game_name] %></h1>
<h1><%= flash[:token] %></h1>
<div class="registration-page">
  <div class="content-column row">
    <div class="column-half-desktop">
      <div class="row">
        <h1 class="section-heading">LOGIN</h1>
      </div>

      <% has_error = flash[:alert].present? %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="column-half-tablet">
            <%= f.label :email, class: 'label' %>
            <div class="text-input-wrapper <%= 'text-input-wrapper--with-error' if has_error %> ">
              <%= f.email_field :email, autofocus: true, class: 'text-input', placeholder: 'Enter email address' %>
            </div>
          </div>
        </div>

        <% if flash[:alert] %>
          <p class="form-error"><%= flash[:alert] %></p>
        <% end %>

        <div class="row">
          <div class="column-half-tablet">
            <button type="submit" class="standard-action-button button-long">Log in</button>
          </div>
          <div class="column-half-tablet">
            <p class="form-text mobile-center">
              New to Doritos<sup>&reg;</sup> Mix Arcade?
              <span class="form-text form-text-yellow"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
            </p>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

<div class="row content-column">
  <div class="section-divider back-to-top">
    <a href="#">Back to top</a>
  </div>
</div>

<% content_for :javascript do %>
  <%= javascript_include_tag *webpack_asset_paths('pages') %>
<% end %>

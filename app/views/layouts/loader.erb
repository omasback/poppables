<% content_for :head do %>
  <style>
    .loader {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #2fc9d1;
      z-index: 900001;
    }

    .loader .chip {
      position: absolute;
      top: calc(50% - 128px);
      left: calc(50% - 128px);
      width: 256px;
      height: 256px;
      background: url('/vendor/loader.gif');
    }

    .ghost {
      opacity: 0;
      pointer-events: none;
    }

    /* NECESSARY BASE STYLES */
    body {
      background: radial-gradient(ellipse at center, #a6f3f7 0%, #32d9e2 100%);
      background-size: cover;
    }

    .headerBar {
      width: 100%;
      height: 100px;
      position: fixed;
      top: 0;
      left: 0;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .headerDesktop {
      display: none;
      background-color: #fff;
      height: 38px;
      border-radius: 50px;
      padding: 10px;
      margin-left: auto;
      box-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);
    }

    .headerNav {
      display: none;
    }

    .footer {
      background-color: #fff;
      color: #838383;
      padding: 15px 12px;
      font-family: arial;
      z-index: 6;
    }

    a {
      text-decoration: none;
      color: #EC1E4E;
    }

  </style>
<% end %>

<% content_for :top do %>
  <div id="loader-screen" class="loader ghost">
    <div class="chip"></div>
  </div>
<% end %>

<% content_for :javascript, flush: true do %>
  <script>
    document.getElementById('loader-screen').classList.remove('ghost');

    function hideLoader() {
      let loader = document.getElementById('loader-screen');
      loader.classList.add("ghost");
      setTimeout(function() {loader.style.display = "none";}, 1000);
      window.removeEventListener('load', hideLoader);
    }
  </script>
  <%= yield :javascript %>
<% end %>

<%= render template: "layouts/application" %>

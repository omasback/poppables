{
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "plugins": [
    "html"
  ],
  "globals": {
    "Phaser": true,
    "process": true,
    "dataLayer": true
  },
  "rules": {
    "no-unused-vars": [
      "warn"
    ],
    "no-undef": [
      "error"
    ],
    "indent": [
      "warn",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-var": [
      "warn"
    ],
    "no-console": [
      "off"
    ],
    "prefer-arrow-callback": [
      "warn"
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 1
      }
    ],
    "eqeqeq": [
      "error"
    ],
    "no-alert": [
      "warn"
    ]
  }
}
